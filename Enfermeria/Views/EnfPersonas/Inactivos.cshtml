@model IEnumerable<Enfermeria.Models.EnfPersona>

@{
    ViewData["Title"] = "Personas Inactivas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <a asp-action="Index" class="btn btn-secondary mb-3">
        <i class="bi bi-arrow-left-circle"></i> Volver al listado de activos
    </a>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Departamento)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cedula</td>
                    <td>@item.Nombre</td>
                    <td>@item.Usuario</td>
                    <td>@item.Departamento</td>
                    <td>@item.Tipo</td>
                    <td>
                        <form asp-action="Reactivar" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-arrow-clockwise"></i> Reactivar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
