@model IEnumerable<Enfermeria.Models.EnfPersona>

@{
    ViewData["Title"] = "Listado de Personas";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Crear Nueva Persona
            </a>
            <a asp-action="Inactivos" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-person-dash"></i> Ver Inactivos
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                <th>@Html.DisplayNameFor(model => model.Departamento)</th>
                <th>@Html.DisplayNameFor(model => model.Tipo)</th>
                <th>@Html.DisplayNameFor(model => model.Seccion)</th>
                <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                <th>@Html.DisplayNameFor(model => model.Sexo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cedula</td>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>@item.Usuario</td>
                    <td>@item.Password</td>
                    <td>@item.Departamento</td>
                    <td>@item.Tipo</td>
                    <td>@item.Seccion</td>
                    <td>@item.FechaNacimiento</td>
                    <td>@item.Sexo</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-x-circle"></i> Desactivar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

